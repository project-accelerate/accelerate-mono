{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "strict": true,
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext.array",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "node_modules",
      "typings"
    ],
    "jsx": "preserve",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}