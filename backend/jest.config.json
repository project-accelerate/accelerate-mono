{
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "setupTestFrameworkScriptFile": "<rootDir>/testSetup.js",
  "testRegex": "__tests__/.*\\.(test|spec)\\.tsx?$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/app/*/domain/*",
    "<rootDir>/app/*/application/*"
  ],
  "coverageDirectory": ".coverage"
}
