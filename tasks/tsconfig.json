{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2015",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "esnext.array",
      "esnext.asynciterable"
    ],
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}