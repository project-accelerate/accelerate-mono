{
  "name": "a2",
  "private": true,
  "workspaces": [
    "backend",
    "common",
    "frontend/web",
    "frontend/native",
    "frontend/common"
  ],
  "scripts": {
    "typecheck": "ts-node --project tasks/tsconfig.json -T tasks typecheckAll",
    "test": "ts-node --project tasks/tsconfig.json -T tasks runAllTests",
    "test:unit": "ts-node --project tasks/tsconfig.json -T tasks unitTest",
    "test:integration:backend":
      "ts-node --project tasks/tsconfig.json -T tasks integrationTest backend",
    "start": "ts-node --project tasks/tsconfig.json -T tasks start",
    "develop:backend":
      "ts-node --project tasks/tsconfig.json -T tasks developBackend",
    "develop:frontend:web":
      "ts-node --project tasks/tsconfig.json -T tasks developFrontend",
    "develop:frontend:native":
      "ts-node --project tasks/tsconfig.json -T tasks developFrontendNative",
    "storybook:web":
      "ts-node --project tasks/tsconfig.json -T tasks storybook web 6001",
    "preview:web": "ts-node --project tasks/tsconfig.json -T tasks preview",
    "heroku-postbuild":
      "ts-node --project tasks/tsconfig.json -T tasks buildAll",
    "pretty": "prettier --write",
    "precommit": "lint-staged",
    "migration:make":
      "ts-node --project tasks/tsconfig.json -T tasks makeMigration"
  },
  "engines": {
    "node": "^10.0.0",
    "yarn": "^1.0.0"
  },
  "dependencies": {
    "@types/dotenv": "^4.0.3",
    "dotenv": "^6.0.0",
    "crna-make-symlinks-for-yarn-workspaces": "^1.0.1",
    "ts-node": "^6.1.1",
    "typescript": "^2.9.2"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5"
  },
  "lint-staged": {
    "*.(js|ts|tsx|jsx|graphql|json)": [
      "yarn pretty",
      "yarn typecheck",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
