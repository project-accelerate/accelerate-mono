{
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "setupTestFrameworkScriptFile": "<rootDir>/src/test/backendUnitSetup.js",
  "testRegex": "src/modules/.*/__tests__/.*\\.(test|spec)\\.tsx?$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/src/modules/*/domain/*",
    "<rootDir>/src/modules/*/application/*"
  ],
  "coverageDirectory": ".coverage"
}
