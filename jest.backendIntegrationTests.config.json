{
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "setupTestFrameworkScriptFile": "<rootDir>/src/test/integrationSetup.ts",
  "testRegex": "src/modules/.*/__tests__/.*\\.integrationTest\\.ts?$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "<rootDir>/src/modules/*/external/*",
    "<rootDir>/src/modules/*/web/*"
  ],
  "coverageDirectory": ".coverage"
}
